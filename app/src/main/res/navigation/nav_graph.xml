<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/musicFragment">

    <fragment
        android:id="@+id/musicFragment"
        android:name="com.bogdanmurzin.uplayer.ui.fragment.MusicFragment"
        android:label="fragment_music"
        tools:layout="@layout/fragment_music" />

    <action
        android:id="@+id/action_global_searchResultFragment"
        app:destination="@id/searchResultFragment" />
    <fragment
        android:id="@+id/searchResultFragment"
        android:name="com.bogdanmurzin.uplayer.ui.fragment.SearchResultFragment"
        android:label="SearchResultFragment" >
        <argument
            android:name="query"
            app:argType="string" />
    </fragment>

</navigation>