<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:background="@color/dark_gray">

    <!-- Seekbar -->
<!--    <SeekBar-->
<!--        android:id="@+id/seekbar"-->
<!--        style="@style/MySeekBar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="18dp"-->
<!--        android:max="100"-->
<!--        android:splitTrack="false"-->
<!--        tools:progress="5" />-->
    <com.pierfrancescosoffritti.androidyoutubeplayer.core.ui.views.YouTubePlayerSeekBar
        android:id="@+id/seekbar"
        style="@style/MySeekBar"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        app:color="@color/white"
        app:fontSize="0sp"/>

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:enableAutomaticInitialization="false"
        app:videoId="S0Q4gqBUs7c"
        app:autoPlay="true" />

    <!-- Video Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- the album's cover + actions -->
        <include android:id="@+id/now_playing_cover" layout="@layout/now_playing_cover" />

        <!-- Previous Button -->
        <ImageButton
            android:id="@+id/prev_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/previous"
            android:src="@drawable/previous" />

        <!-- Play/Pause Button -->
        <ImageButton
            android:id="@+id/play_pause_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/play_pause"
            android:src="@drawable/pause_icon" />

        <!-- Next Button -->
        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/next"
            android:src="@drawable/next_icon" />
    </LinearLayout>
</LinearLayout>
