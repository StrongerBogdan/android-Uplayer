<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/recycler_charts_width"
    android:layout_height="@dimen/recycler_charts_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/redial_gradient_bottom"
    tools:background="@drawable/redial_gradient_bottom">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chart_image_view"
        android:layout_width="@dimen/charts_image_width"
        android:layout_height="@dimen/charts_image_height"
        android:layout_marginStart="@dimen/charts_image_margin_sides"
        android:layout_marginTop="@dimen/charts_image_margin_top"
        android:layout_marginEnd="@dimen/charts_image_margin_sides"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        tools:src="@color/purple_200" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/chart_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.CaptionText"
        android:maxLines="2"
        android:textSize="@dimen/charts_text_size_caption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chart_image_view"
        tools:text="Monsters Go Bump" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/chart_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.SubtitleText"
        android:textSize="@dimen/author_text_size"
        android:layout_marginTop="@dimen/author_text_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chart_video_name"
        tools:text="ERIKA RECINOS" />

</androidx.constraintlayout.widget.ConstraintLayout>