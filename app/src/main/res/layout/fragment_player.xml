<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/myToolbar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_header_height"
        app:layout_constraintBottom_toTopOf="@id/yt_player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/header_fragment"
            layout="@layout/fragment_header_player" />
    </com.google.android.material.appbar.MaterialToolbar>

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/yt_player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myToolbar" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/charts_text_view"
        style="@style/Text.CaptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/player_video_title_margin_top"
        android:textSize="@dimen/player_video_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yt_player"
        tools:text="Moment Apart" />

    <!-- Author Name -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/author_name"
        style="@style/Text.SubtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/player_video_author_margin_top"
        android:textSize="@dimen/player_video_author_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/charts_text_view"
        tools:text="ODESZA" />

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.ui.views.YouTubePlayerSeekBar
        android:id="@+id/seekbar"
        style="@style/MySeekBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seek_bar_height"
        android:layout_marginTop="100dp"
        app:color="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/author_name" />

    <!-- Video Controls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/player_controls_height"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekbar">

        <!-- Previous Button -->
        <ImageButton
            android:id="@+id/prev_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/player_controls_padding"
            android:background="@null"
            android:contentDescription="@string/previous"
            android:src="@drawable/previous" />

        <!-- Play/Pause Button -->
        <ImageButton
            android:id="@+id/play_pause_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/player_controls_padding"
            android:background="@null"
            android:contentDescription="@string/play"
            android:src="@drawable/pause_icon" />

        <!-- Next Button -->
        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/player_controls_padding"
            android:background="@null"
            android:contentDescription="@string/next"
            android:src="@drawable/next_icon" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>