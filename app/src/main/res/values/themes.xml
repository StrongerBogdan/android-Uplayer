<resources>
    <!-- Base application theme. -->
    <style name="Theme.Uplayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_dark_gray</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="RoundedImageView.TopCorners" parent="RoundedImageView">
        <item name="cornerSizeTopRight">6dp</item>
        <item name="cornerSizeTopLeft">6dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Text">
        <item name="fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Text.CaptionText">
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.SubtitleText">
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="Text.ListVideoName">
        <item name="android:textColor">@color/light_gray</item>
    </style>
    <style name="Text.ListAuthorName">
        <item name="android:textColor">@color/light_gray2</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/white_transparent</item>
        <item name="android:progressTint">@color/white</item>
        <item name="android:thumbTint">@color/white</item>
        <item name="android:progressDrawable">@drawable/seek_bar</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="BottomNav">
        <item name="android:background">@color/dark_gray2</item>
    </style>
    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
</resources>